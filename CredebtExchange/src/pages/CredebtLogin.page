<apex:page showHeader="false" sidebar="false" controller="CommunitiesLoginController">
	<apex:stylesheet value="{!$Resource.AppProcessStyle}"/>
	<apex:Pagemessages id="msg"/>
<body>
    
        <div class="slds-scope">
            <apex:include pageName="HeaderPageLogin"/>
            <div class="form-container" style="background-color:#C8C8C8; padding-bottom:20px">
                <div class="inner-wrapper">
                    <apex:form >      
                        	<div style="display:block;padding:20px 0px 0px 0px;margin-top: 0px;margin-bottom: 0px; margin-left: auto;margin-right: auto;max-width: 380px;">
                                <div style="display: block;margin-bottom: 24px;background-color:#fff;margin:0px auto;padding: 20px;border-radius: 4px;border: 1px solid #D8DDE6;color: #16325c;">
                                    <apex:outputLabel style="font-size: 12px;color: #54698d;" value="Username"/><br/>
                                    <apex:inputText style="padding:12px;margin-top:8px;margin-bottom:16px;" styleClass="slds-input" required="true" id="username" value="{!username}"/><br/>
                                    <apex:outputLabel style="font-size: 12px;color: #54698d;" value="Password"/><br/>
                                    <apex:inputSecret style="padding:12px;margin-top:8px;margin-bottom:16px;" styleClass="slds-input" id="password" value="{!password}"/><br/><br/>
                                    
                                    <apex:commandButton style="width: 100%;" action="{!loginUser}" value="Login" id="Login"/>
                                </div>
                        </div>
                    </apex:form>
                </div>
            </div>
        </div>
        <apex:include pageName="FooterPage"/>
    </body>
</apex:page>